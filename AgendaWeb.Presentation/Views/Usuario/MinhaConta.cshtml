@using Newtonsoft.Json
@using AgendaWeb.Presentation.Models
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpContextAccessor

@{
       Layout = "~/Views/Shared/Layout.cshtml";
}

@{
    //Ler os dados do usuário gravado em sessão
    var json = httpContextAccessor.HttpContext.Session.GetString("usuario");
    var usuario = JsonConvert.DeserializeObject<UsuarioModel>(json); 
}

<h5>Dados do usuário</h5>
<hr />

<div class="mb-3">
    ID do Usuário: <strong>@usuario.IdUsuario</strong>
</div>

<div class="mb-3">
    Nome do Usuário: <strong>@usuario.Nome</strong>
</div>

<div class="mb-3">
    Email do Usuário: <strong>@usuario.Email</strong>
</div>

<div class="mb-3">
    Cadastrado em: <strong>@usuario.DataInclusao</strong>
</div>

<div class="mb-3">
    Data/Hora do Acesso: <strong>@usuario.DataHoraAcesso</strong>
</div>

